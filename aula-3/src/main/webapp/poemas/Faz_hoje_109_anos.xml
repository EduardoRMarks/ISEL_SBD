<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<poema>
	<autor>João Sardinha</autor>
	<título>Faz hoje 109 anos</título>
	<estrofe>
		<verso>Foi D. Maria Pia</verso>
		<verso>Italiana muito bela</verso>
		<verso>Pois Rei D. Luís sabia</verso>
		<verso>Por isso casou com ela</verso>
	</estrofe>
	<estrofe>
		<verso>No tempo com alegria</verso>
		<verso>Se muito nova casou</verso>
		<verso>A D. Maria Pia</verso>
		<verso>Os seus dois Filhos, criou</verso>
	</estrofe>
	<estrofe>
		<verso>De D. Maria Pia</verso>
		<verso>Se D. Carlos veio primeiro</verso>
		<verso>Pois este é que seria</verso>
		<verso>Da Coroa o herdeiro</verso>
	</estrofe>
	<estrofe>
		<verso>Pois D. Maria Pia</verso>
		<verso>Levou Filho a passear</verso>
		<verso>Se ao mar D. Carlos caía</verso>
		<verso>Tentou ela o salvar</verso>
	</estrofe>
	<estrofe>
		<verso>A tentar salvar seu Filho</verso>
		<verso>Aí alguém os salvava</verso>
		<verso>D. Luís com muito brilho</verso>
		<verso>Condecorou-o e pagava</verso>
	</estrofe>
	<estrofe>
		<verso>Segundo Filho importante</verso>
		<verso>Afonso Henriques chamado</verso>
		<verso>De Portugal foi Infante</verso>
		<verso>Mais tarde Príncipe amado</verso>
	</estrofe>
	<estrofe>
		<verso>Da Índia Vice-Rei chegou</verso>
		<verso>E para bem dos seus males</verso>
		<verso>D. Afonso chefiou</verso>
		<verso>Companhias Militares</verso>
	</estrofe>
	<estrofe>
		<verso>Lá D. Maria Pia</verso>
		<verso>Com muitas largas gastava</verso>
		<verso>Ao Povo impressão fazia</verso>
		<verso>Por isso se comentava</verso>
	</estrofe>
	<estrofe>
		<verso>Mas lá em contrapartida</verso>
		<verso>A D. Maria Pia</verso>
		<verso>Pois por ser muito querida</verso>
		<verso>Povo tinha simpatia</verso>
	</estrofe>
	<estrofe>
		<verso>Pelo que distribuía</verso>
		<verso>Não só por toda a Cidade</verso>
		<verso>Foi D. Maria Pia</verso>
		<verso>O "Anjo da Caridade"</verso>
	</estrofe>
	<estrofe>
		<verso>Em loucuras de Amor</verso>
		<verso>Lá D. Maria Pia</verso>
		<verso>A D. Luís sim senhor</verso>
		<verso>Que ele era doido dizia</verso>
	</estrofe>
	<estrofe>
		<verso>Foi D. Maria Pia</verso>
		<verso>Uma Rainha com sorte</verso>
		<verso>Registada neste dia</verso>
		<verso>Lembramos a sua morte</verso>
	</estrofe>
</poema>